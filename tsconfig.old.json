{
	"compilerOptions": {
		"baseUrl": "./",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2021.String"]
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
